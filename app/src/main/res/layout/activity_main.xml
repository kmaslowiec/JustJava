<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context="com.example.android.justjava.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <!-- Text to enter -->

        <EditText
            android:id="@+id/text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_name"
            android:inputType="textCapWords"

            />

    <!-- Toppings key -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/topping"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_margin="@dimen/margin"
        android:textSize="@dimen/sizeFont" />

    <!-- check box layout -->


        <CheckBox
            android:id="@+id/cream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/margin"
            android:text="@string/cream"
            android:textSize="@dimen/sizeFont"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingLeft="@dimen/betweenViews"
            />

        <CheckBox
            android:id="@+id/choco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/margin"
            android:text="@string/choco"
            android:textSize="@dimen/sizeFont"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingLeft="@dimen/betweenViews"
            />





    <!-- END OF check box layout -->


    <!-- Quantity key -->
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quantity"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_margin="@dimen/margin"
        android:textSize="@dimen/sizeFont"
        />

    <!-- quantity buttons layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <!-- increase quantity button-->
    <Button
        android:id="@+id/button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="@string/increase"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/margin"
        android:onClick="increase"


        />

    <!-- Quantity number -->
    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/num"
        android:layout_marginLeft="@dimen/marginQuan"
        android:layout_marginRight="@dimen/marginQuan"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/sizeFont"
        />
    <!-- decrease quantity button -->
    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="@string/decrease"
        android:textStyle="bold"
        android:onClick="decrease"

        />
    </LinearLayout>
    <!-- END OF quantity buttons layout -->

    <!-- Price key -->
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_margin="@dimen/margin"
        android:textSize="@dimen/sizeFont"
        />

    <!-- Price number -->
    <TextView
        android:id="@+id/order_summary_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/priceNum"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginStart="@dimen/margin"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/sizeFont"
        />

    <!-- Button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/margin"
        android:onClick="submitOrder"

        />



    </LinearLayout>

</ScrollView>
